<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:orientation="horizontal" android:paddingLeft="10dip"
	android:gravity="center_vertical" android:id="@+id/layoutConf">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:id="@+id/confImage" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:paddingLeft="10dip">
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:text="pouet" android:id="@+id/txtConf"
			android:textSize="20dip" android:textColor="#FFF"/>

		<TextView android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:text="Test" android:id="@+id/txtConfValue"
			android:textSize="15dip"  android:gravity="center_vertical"
			android:textStyle="italic"/>

	</LinearLayout>
</LinearLayout>
